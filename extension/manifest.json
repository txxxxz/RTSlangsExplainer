{
  "manifest_version": 3,
  "name": "LinguaLens",
  "version": "0.1.0",
  "description": "Explain subtitle slang with fast Quick mode and rich Deep insights.",
  "permissions": ["storage", "activeTab", "scripting", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background/index.global.js"
  },
  "action": {
    "default_title": "LinguaLens"
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.global.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/styles/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}

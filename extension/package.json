{
  "name": "lingualens-extension",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsup --watch --env.NODE_ENV=development",
    "build": "tsup && node scripts/copy-static.mjs",
    "package": "npm run build && web-ext build --source-dir ./dist --artifacts-dir ./artifacts --overwrite-dest",
    "lint": "eslint --ext .ts,.tsx src",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@types/webextension-polyfill": "^0.12.4",
    "axios": "^1.6.8",
    "idb": "^7.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tesseract.js": "^5.1.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.229",
    "@types/node": "^24.7.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@playwright/test": "^1.44.0",
    "eslint": "^8.57.0",
    "tsup": "^8.5.0",
    "typescript": "^5.4.0",
    "web-ext": "^8.2.0"
  }
}
